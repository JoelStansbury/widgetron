  string: 'py<< python_version.replace(".", "") >>_{{ environ.SDIST_SHA256[:7] }}'
  ignore_prefix_files:
    - Lib/site-packages/widgetron_app/*.zip


requirements:
  host:
    - flit-core >=3.9.0,<4
    - pip
    - python =<< python_version >>.*
  run:
    - python =<< python_version >>.*
    - flit >=3.9.0, <4