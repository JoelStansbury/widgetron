const { app, BrowserWindow } = require('electron')

url = process.env.widgetron_url;

const createWindow = () => {
  const win = new BrowserWindow({
    width: 1000,
    height: 600,
    autoHideMenuBar: true
  })
  win.loadURL(url);
  win.on('close', function(e) { 
    e.preventDefault();
    win.destroy();
  });
}

app.whenReady().then(() => {
  createWindow()
})